<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="18dp">

    <Button
        android:id="@+id/btnSkip"
        android:text="SKIP"
        android:textColor="@color/light_grey"
        android:background="@drawable/item_btn_style"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/imageView"
        android:src="@drawable/ic_launcher_background"
        android:layout_marginTop="150dp"
        android:layout_centerHorizontal="true"
        android:layout_width="250dp"
        android:layout_height="250dp"/>

    <TextView
        android:id="@+id/textPagerTitle"
        android:text="TITLE"
        android:textSize="28sp"
        android:layout_marginTop="64dp"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/textPagerDesc"
        android:text="Description Description Description Description Description Description Description Description"
        android:textSize="18sp"
        android:layout_marginTop="32dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textPagerTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnStart"
        android:text="START"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textPagerDesc"
        android:layout_width="300dp"
        android:layout_height="wrap_content"/>

</RelativeLayout>